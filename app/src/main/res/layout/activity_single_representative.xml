<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="360dp"
        android:layout_height="237dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/residence"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Residence:"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/street"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="Street: "
                />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/line1" />

            <TextView
                android:id="@+id/mcity"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="City:" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/city"/>

            <TextView
                android:id="@+id/mstate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="State:" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/state"/>

            <TextView
                android:id="@+id/mzip"
                android:layout_width="37dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Zip:" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:id="@+id/zip"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/contact_info_tv"
                android:textSize="20dp"
                android:text="Contact Information:"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Phone Number: "
                android:id="@+id/phone_tv"
                android:layout_marginTop="10dp" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/phones"/>



        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/rep"
        android:layout_width="149dp"
        android:layout_height="173dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="17dp"
        app:srcCompat="@drawable/thumb__ser" />

    <LinearLayout
        android:id="@+id/rep_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/office"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignStart="@+id/rep"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-24dp"
        android:layout_marginTop="198dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="President of the United States"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="178dp"
        android:layout_height="69dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:text="Donal J. Trump"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/party"
        android:layout_width="128dp"
        android:layout_height="49dp"
        android:layout_alignStart="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="128dp"
        android:text="Republican" />

</RelativeLayout>